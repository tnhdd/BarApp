<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/fragment_whiskey"
    tools:context=".WhiskeyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize,UselessParent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_whiskey_sour"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/almost_white">

                <TextView
                    android:id="@+id/tvWhiskey_Sour"
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Whiskey Sour"
                    android:textSize="40sp"
                    android:translationX="125dp"
                    android:translationY="10dp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/ivWS"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:src="@drawable/whiskey_sour"
                    android:translationX="10dp"
                    android:translationY="10dp"
                    tools:ignore="ContentDescription,ImageContrastCheck" />



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_whiskey_ontherock"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/almost_white">

                <TextView
                    android:id="@+id/tvOntheRock"
                    android:layout_width="wrap_content"
                    android:layout_height="115dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="On The Rock"
                    android:textSize="40sp"
                    android:translationX="125dp"
                    android:translationY="10dp"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/ivMatini"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/whiskey_ontherock"
                    android:translationX="10dp"
                    android:translationY="10dp"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</FrameLayout>